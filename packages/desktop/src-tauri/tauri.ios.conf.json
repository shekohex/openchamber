{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "bun --cwd ../web vite --host 0.0.0.0 --port 5173 --strictPort",
    "beforeBuildCommand": "node ./scripts/build-mobile-web-dist.mjs",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "resources/mobile-web-dist"
  },
  "bundle": {
    "iOS": {
      "infoPlist": "Info.ios.plist"
    },
    "externalBin": [],
    "resources": [
      "resources/mobile-web-dist/**/*"
    ]
  }
}
